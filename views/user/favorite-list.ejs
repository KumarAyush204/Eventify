<%- include ('../partials/head') %>

<body class="min-h-screen flex flex-col bg-red-50">
  <!-- Top navbar -->
  <%- include ('../partials/nav') %>

  <!-- Main content -->
  <main class="flex-grow px-6 py-8 text-red-900">
    <!-- Heading -->
    <h1 class="text-4xl font-bold text-red-700 mb-8 text-center">
      Your Favorite Properties:
    </h1> 
    <!-- Registered houses list -->
<div class="flex flex-wrap gap-6 justify-center px-4">
  <% favouriteHomes.forEach( house=>{ %>
    <div class="bg-white shadow-md rounded-2xl p-5 w-64 hover:shadow-xl transition-shadow duration-300">
      <img 
  src="https://prod.rockmedialibrary.com/api/public/content/ff061825fa8e44bf8108de5c786c0062?v=4c4f7c7a" 
  alt="House Image" 
  class="w-full object-contain rounded-lg mb-3"
/>
      <h3 class="text-red-700 font-bold text-lg mb-2"><%= house.housename %></h3>
      <p class="text-sm text-gray-600 mb-1">
        <span class="font-semibold text-gray-700">Address:</span> <%= house.address %>
      </p>
      <p class="text-sm text-gray-600 mb-1">
        <span class="font-semibold text-gray-700">House No.:</span> <%= house.housenumber %>
      </p>
      <p class="text-sm text-gray-600">
        <span class="font-semibold text-gray-700">Price/Night:</span> â‚¹<%= house.price %>
      </p>
      <p class="text-sm text-gray-600">
        <span class="font-semibold text-gray-700"><i class="fas fa-star text-yellow-400"></i>
</span> <%= house.rating %>
      </p>
      <a class="text-sm text-gray-600 mb-1" href="/home-detail/<%= house._id %>">More Details...</a>
      <form action="/favourites/delete/<%= house._id %>"method="POST">
        <button type="submit" class="bg-red-100 text-red-700 font-semibold px-4 py-1 rounded hover:bg-red-200 transition">Delete from Favorite</button>
      </form>
    </div>
  <% }) %>
</div>


    
<div class="flex flex-wrap gap-6 justify-center px-4">
  <% homes.forEach(function(house) { %>
    <div class="bg-white shadow-md rounded-2xl p-5 w-64 hover:shadow-xl transition-shadow duration-300 flex flex-col">
      
      <div class="relative mb-3 group">
        <img src="<%= house.photoUrl %>" alt="<%= house.housename %>"
             class="w-full h-40 object-cover rounded-lg transform group-hover:scale-105 transition-transform duration-500"/>
        
        <span class="absolute bottom-2 left-2 bg-black/60 text-white text-xs px-2 py-1 rounded backdrop-blur-sm">
          <%= house.venueType || 'Venue' %>
        </span>
      </div>

      <h3 class="text-red-700 font-bold text-lg mb-2 truncate"><%= house.housename %></h3>
      
      <p class="text-sm text-gray-600 mb-1 truncate">
        <span class="font-semibold text-gray-700">Address:</span> <%= house.address %>
      </p>
      
      <p class="text-sm text-gray-600 mb-1">
        <span class="font-semibold text-gray-700">Capacity:</span> <%= house.capacity %> Guests
      </p>
      
      <p class="text-sm text-gray-600 mb-1">
        <span class="font-semibold text-gray-700">Price/Day:</span> â‚¹<%= house.price %>
      </p>
      
      <p class="text-sm text-gray-600 mb-4">
        <span class="font-semibold text-gray-700">
          <i class="fas fa-star text-yellow-400"></i>
        </span> 
        <%= house.rating %>
      </p>

      <div class="mt-auto flex flex-col gap-2">
        
        <a class="block w-full bg-white text-red-700 border border-red-700 font-semibold py-2 rounded-lg text-center hover:bg-red-50 transition duration-300" 
           href="/home-detail/<%= house._id %>">
          View Details
        </a>

        <% if (typeof user === 'undefined' || !user || user.usertype !== 'host') { %>
          <a class="block w-full bg-red-700 text-white font-semibold py-2 rounded-lg text-center hover:bg-red-800 shadow-md transition duration-300"
             href="/book/<%= house._id %>">
            Book For Event
          </a>
        <% } %>

      </div>

    </div>
  <% }) %>
</div>
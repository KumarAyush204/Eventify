<%- include ('../partials/head')%>
<body class="min-h-screen flex flex-col bg-gradient-to-br from-red-50 via-white to-pink-50">
  <%- include ('../partials/nav')%>

  <div class="flex flex-1 items-center justify-center px-4 py-10">
    <main class="bg-white/90 backdrop-blur-md p-8 rounded-2xl shadow-xl w-full max-w-lg border border-red-100">
      <header class="mb-8 text-center">
        <h1 class="text-3xl font-bold text-red-700 tracking-tight">
          Confirm Your Event
        </h1>
        <p class="text-gray-500 text-sm mt-1">
          Booking <strong><%= home.housename %></strong>
        </p>
      </header>
<header class="mb-8 text-center">
        <h1 class="text-3xl font-bold text-red-700 tracking-tight">
          Confirm Your Event
        </h1>
        <p class="text-gray-500 text-sm mt-1">
          Booking <strong><%= home.housename %></strong>
        </p>
      </header>

      <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
        <div class="bg-red-50 border-l-4 border-red-500 p-4 rounded-md mb-6 animate-pulse">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-bold text-red-800">
                Booking Failed
              </p>
              <p class="text-sm text-red-700 mt-1">
                <%= errorMessage %>
              </p>
            </div>
          </div>
        </div>
      <% } %>
      <form action="/book/<%= home._id %>" method="POST" class="space-y-5">
        
        <div class="space-y-4">
          <input
            type="text"
            name="customername"
            value="<%= user ? user.firstname + ' ' + user.lastname : '' %>"
            placeholder="Full Name"
            class="w-full px-4 py-3 border border-red-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 transition"
            required
          />

          <input
            type="number"
            name="customernumber"
            placeholder="Contact Number"
            class="w-full px-4 py-3 border border-red-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 transition"
            required
          />

          <input
            type="email"
            name="customeremail"
            value="<%= user ? user.email : '' %>"
            placeholder="Email Address"
            class="w-full px-4 py-3 border border-red-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 transition"
            required
          />
        </div>

        <hr class="border-red-100" />

        <div class="space-y-4">
          <div class="flex gap-4">
            <div class="flex-1">
              <label class="text-xs font-semibold text-gray-500 ml-1">Event Start</label>
              <input
                type="date"
                name="startDate"
                id="startDate"
                class="w-full px-4 py-3 border border-red-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 transition"
                required
              />
            </div>
            <div class="flex-1">
              <label class="text-xs font-semibold text-gray-500 ml-1">Event End</label>
              <input
                type="date"
                name="endDate"
                id="endDate"
                class="w-full px-4 py-3 border border-red-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 transition"
                required
              />
            </div>
          </div>

          <div>
             <label class="text-xs font-semibold text-gray-500 ml-1">Guest Count</label>
             <input
              type="number"
              name="guestCount"
              placeholder="Expected Guests (Max: <%= home.capacity %>)"
              max="<%= home.capacity %>"
              class="w-full px-4 py-3 border border-red-200 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-red-500 transition"
              required
            />
          </div>
        </div>

        <div class="bg-red-50 p-4 rounded-lg text-sm text-red-800">
          <p class="flex justify-between"><span>Price per Day:</span> <span>â‚¹<%= home.price %></span></p>
          <p class="text-xs text-gray-500 mt-1">*Total price will be calculated at checkout based on dates selected.</p>
        </div>

        <button
          type="submit"
          class="w-full bg-red-600 text-white py-3 px-4 rounded-lg shadow-md hover:bg-red-700 hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 font-semibold"
        >
          Proceed to Payment
        </button>
      </form>
    </main>
  </div>

  <script>
    // Simple script to ensure End Date is not before Start Date
    const startInput = document.getElementById('startDate');
    const endInput = document.getElementById('endDate');

    // Set minimum date to today
    const today = new Date().toISOString().split('T')[0];
    startInput.min = today;
    endInput.min = today;

    startInput.addEventListener('change', function() {
      endInput.min = this.value;
    });
  </script>
</body>
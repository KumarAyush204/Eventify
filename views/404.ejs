<%- include ('partials/head') %>

<body class="flex flex-col min-h-screen bg-red-50">
  
  <%- include ('partials/nav') %>

  <div class="flex flex-1 items-center justify-center p-4">
    <div class="bg-white p-8 rounded-2xl shadow-xl text-center max-w-md w-full border border-red-100">
      
      <h1 class="text-4xl font-bold text-red-700 mb-2">
        <%= pageTitle ? pageTitle : 'Error' %>
      </h1>
      
      <p class="text-gray-600 mb-6 text-lg">
        <%= typeof message !== 'undefined' ? message : 'Something went wrong.' %>
      </p>

      <a href="/" class="inline-block bg-red-600 text-white px-8 py-3 rounded-xl font-semibold shadow-md hover:bg-red-700 hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200">
        Go to Home Page
      </a>
    </div>
  </div>
</body>
</html>
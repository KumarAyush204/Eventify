<%- include ('partials/head') %>

<body class="flex flex-col min-h-screen bg-gradient-to-br from-red-50 via-white to-pink-50">
  
  <%- include ('partials/nav') %>

  <div class="flex flex-1 items-center justify-center p-4">
    <div class="bg-white/90 backdrop-blur-lg p-6 md:p-10 rounded-2xl md:rounded-3xl shadow-2xl text-center w-full max-w-sm md:max-w-md border border-red-100 relative overflow-hidden">
      
      <div class="absolute -top-10 -right-10 w-24 h-24 md:w-32 md:h-32 bg-red-100 rounded-full opacity-50 blur-xl pointer-events-none"></div>
      
      <div class="relative z-10">
        <div class="text-red-500 text-5xl md:text-6xl mb-4 md:mb-6">
          <i class="fas fa-exclamation-triangle"></i>
        </div>
        
        <h1 class="text-2xl md:text-4xl font-bold text-red-800 mb-2 md:mb-3">
          <%= pageTitle ? pageTitle : 'Page Not Found' %>
        </h1>
        
        <p class="text-gray-600 mb-6 md:mb-8 text-base md:text-lg leading-relaxed">
          <%= typeof message !== 'undefined' ? message : "Oops! We couldn't find the page you were looking for." %>
        </p>

        <a href="/" class="inline-block bg-red-600 text-white px-6 py-3 md:px-8 md:py-3 rounded-xl font-bold shadow-lg hover:bg-red-700 hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 text-sm md:text-base">
          <i class="fas fa-home mr-2"></i> Go to Home Page
        </a>
      </div>
    </div>
  </div>
</body>
</html>